<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">
		<title>Portal de notícias</title>
		<script src="/js/jquery-2.2.1.js"></script>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
		<link href="/css/style.css" rel="stylesheet">
		<link rel="shortcut icon" href="images/favicon.ico" />
	</head>
	<body>
		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
						<span class="sr-only">Toggle navigation</span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<a href="/"><img src="/images/logo.png" /></a>
				</div>

				<div id="navbar" class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right">
						<li><a href="/">Home</a></li>
						<li><a href="/noticias">Notícias</a></li>
						<li><a href="/noticias/nova">Adicionar Notícia</a></li>
					</ul>
				</div>
			</div>
		</nav>

	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-12">
	    			<form action="/noticias/salvar" method="post">
						<%- include('input', {label: 'Título', name: 'titulo', type: '', placeholder: 'Título da Notícia', validation: validation ? validation.titulo : null }); %>
						<%- include('input', {label: 'Resumo', name: 'resumo', type: '', placeholder: 'Resumo da Notícia', validation: validation ? validation.resumo : null }); %>
						<%- include('input', {label: 'Nome Autor', name: 'autor', type: '', placeholder: 'Autor da Notícia', validation: validation ? validation.autor : null }); %>
						<%- include('input', {label: 'Data dos fatos', name: 'data_noticia', type: 'date', placeholder: 'Data da Notícia', validation: validation ? validation.data_noticia : null }); %>
			
						<div class="form-group">
							<label for="noticia">Notícia:</label>
								<textarea class="form-control" id="noticia" name="noticia"></textarea>								
							<% if (validation && validation.noticia) { %>
								<small> <%= validation.noticia.msg %> </small>
							<% } %>
						</div>
						
						<button type="submit" class="btn btn-default">Cadastrar</button>
					</form>
		    	</div>
	    	</div>
	    </div>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	</body>
</html>